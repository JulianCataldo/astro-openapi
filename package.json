{
	"name": "@astro-openapi/root",
	"version": "0.0.0",
	"private": true,
	"description": "A toolset for building full-stack operations easily, with type-safety and documentation as first-class citizens.",
	"license": "ISC",
	"author": "Julian Cataldo",
	"homepage": "https://astro-openapi.juliancataldo.com",
	"type": "module",
	"repository": {
		"url": "https://github.com/JulianCataldo/astro-openapi"
	},
	"bugs": {
		"url": "https://github.com/JulianCataldo/astro-openapi/issues"
	},
	"scripts": {
		"prepare": "husky install",
		"preinstall": "npx only-allow pnpm",
		"// dev": "turbo run dev --filter=./packages/*",
		"// build": "turbo run build --filter=./packages/* --cache-dir='.turbo'",
		"// clean": "turbo run clean",
		"dev:demo": "cd demo && pnpm dev",
		"build:demo": "cd demo && pnpm build",
		"build:configs": "cd configs && pnpm build",
		"run:demo": "cd demo && pnpm run preview",
		"lint:ecma": "eslint",
		"lint:ecma:fix": "eslint --fix",
		"lint:css": "stylelint './**/*.{css,scss}'",
		"lint:css:fix": "stylelint './**/*.{css,scss}' --fix",
		"format:check": "prettier -c .",
		"format:fix": "prettier -w .",
		"ci:version": "pnpm run ci:version:root && pnpm changeset version",
		"// ci:version:root": "pnpm standard-version --no-verify",
		"ci:publish": "pnpm publish -r --no-git-checks && pnpm changeset tag",
		"ci:lint:commit": "pnpm commitlint --from=HEAD~1",
		"docs:dev": "PORT=4100 pnpm instant-docs",
		"docs:typedoc": "pnpm typedoc --hideBreadcrumbs --hideInPageTOC && mv ./.typedoc/modules/** docs/reference/00-packages/ && rm -rf ./.typedoc",
		"docs:build": "PORT=4100 pnpm instant-docs build"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.4.8",
		"@changesets/cli": "^2.26.1",
		"@commitlint/cli": "17.6.1",
		"validate-branch-name": "^1.3.0",
		"@commitlint/config-conventional": "17.6.1",
		"@commitlint/types": "17.4.4",
		"@instant-docs/cli": "link:/Volumes/n_1024a-Projects/Repositories/packages/simple-docs/cli",
		"@typescript-eslint/eslint-plugin": "^5.58.0",
		"@typescript-eslint/parser": "^5.58.0",
		"astro-eslint-parser": "^0.13.3",
		"eslint": "^8.38.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-import-resolver-typescript": "^3.5.5",
		"eslint-plugin-astro": "^0.26.1",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-playwright": "^0.12.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-tsdoc": "^0.2.17",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.1",
		"postcss": "^8.4.21",
		"postcss-html": "^1.5.0",
		"prettier": "^2.8.7",
		"prettier-plugin-astro": "^0.8.0",
		"sass": "^1.62.0",
		"stylelint": "^15.5.0",
		"stylelint-config-html": "^1.1.0",
		"stylelint-config-prettier": "^9.0.5",
		"stylelint-config-recess-order": "^4.0.0",
		"stylelint-config-recommended": "^12.0.0",
		"stylelint-config-recommended-scss": "^10.0.0",
		"stylelint-config-standard": "^33.0.0",
		"stylelint-config-standard-scss": "^8.0.0",
		"tsx": "^3.12.6",
		"turbo": "^1.9.1",
		"typedoc": "^0.24.2",
		"typedoc-plugin-markdown": "^3.15.1",
		"typescript": "^5.0.4",
		"webdev-configs": "^1.4.0"
	},
	"engines": {
		"node": ">=18",
		"pnpm": ">=7"
	},
	"packageManager": "pnpm@7.18.1",
	"publishConfig": {
		"access": "restricted"
	},
	"dependencies": {
		"@knodes/typedoc-plugin-pages": "^0.23.4",
		"typedoc-plugin-pages": "^1.1.0"
	}
}
